<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_doing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="6dp"
    app:cardBackgroundColor="#27ECEDEF"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_item_doing"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            tools:src="@drawable/venice" />

        <TextView
            android:id="@+id/text_view_item_doing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/image_view_item_doing"
            android:gravity="center_horizontal"
            android:text="Place"
            android:textColor="#9F2323"
            android:textSize="30sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>